<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/toastContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="@dimen/toasteroid_alpha_background"
        android:background="@drawable/toasteroid_rounded_shape"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/small_padding">

        <ImageView
            android:id="@+id/toastImage"
            android:layout_width="@dimen/toasteroid_image_size"
            android:layout_height="@dimen/toasteroid_image_size"
            android:src="@drawable/ic_toasteroid_info" />

        <TextView
            android:id="@+id/toastMessage"
            style="@style/toasteroid_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_padding"
            android:layout_toRightOf="@+id/image"
            android:text="This is an information text"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>